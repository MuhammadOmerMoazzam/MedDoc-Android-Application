<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state -->
    <item android:color="#CCCCCC" />

    <!-- Focused state -->
    <item android:state_focused="true" android:color="#E0E0E0" />

    <!-- Pressed state -->
    <item android:state_pressed="true" android:color="#BDBDBD" />

    <!-- Disabled state -->
    <item android:state_enabled="false" android:color="#F5F5F5" />
</selector>